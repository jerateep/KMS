@model IList<KMS.ViewModels.MenuItem>
<!-- Main Header -->
<header class="main-header">
    <a href="#" class="logo">
        <span class="logo-mini"><b>K</b>MS</span>
        <span class="logo-lg"><b>Key</b> Management</span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Notifications: style can be found in dropdown.less -->
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        @*<img alt="img" class="user-image" src="~/EmpImage.ashx?id=@Html.Raw(Session["login"] as string)" />*@
                        @ViewBag.User [@ViewBag.UserName]
                    </a>
                    <ul class="dropdown-menu" id="ulUserDetail" runat="server">
                        <!-- User image -->
                        <li class="user-header">
                            @*<img alt="img" class="img-responsive img-circle center-block" src="~/EmpImage.ashx?id=@Html.Raw(Session["login"] as string)" style="border-width:0px;" width="100px" height="100px" />*@

                            <p class="font-10"><small>@ViewBag.User [@ViewBag.PersNo]</small></p>
                            <p class="font-10"><small></small></p>
                            <p class="font-10"><small>@ViewBag.Position / @ViewBag.BU</small></p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="~/User/Profile" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a href="~/Auth/Logout" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                <li>
                    <a href="~/Auth/Logout">
                        <i class="glyphicon glyphicon-log-out"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            @foreach (var item in Model)
            {
                var url = item.Url;
                //var target = "_self";

                if (url.StartsWith("~"))
                {
                    url = Url.Content(url);
                }
                <li><a href="@url"><i class="@item.Icon"></i> <span>@item.Title</span></a></li>
            }
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>